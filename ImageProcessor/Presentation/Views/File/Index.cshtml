@section Scripts
{
    <script>
        const inputFiles = document.querySelector('input[type="file"]')
        const submitButton = document.querySelector("form button[type='submit']")
        
        document.querySelector("form").addEventListener('submit', e => {
            e.preventDefault()

            document.querySelectorAll("form input").forEach(x => x.setAttribute("disabled", true))
            submitButton.querySelector("span").innerText = "Processing..."
            submitButton.querySelector("svg").classList.remove("hidden")
            submitButton.querySelector("svg").classList.add("inline")
            
            let data = new FormData()
            
            for (const file of inputFiles.files) {
                data.append('files', file)
            }
            data.append('targetFileType', document.querySelector('#targetFileType').value)
            data.append('compress', document.querySelector('#shouldCompress').value === 'on' ? 'true' : 'false')
            data.append('resize', document.querySelector('#shouldResize').value === 'on' ? 'true' : 'false')
            
            fetch('/File/UploadFiles/', {
                method: 'POST',
                body: data
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Http error! Error: ${response}`)
                }

                return response.blob()
            })
            .then(blob => {

                const file = window.URL.createObjectURL(blob)
                window.location.assign(file)

                submitButton.querySelector("span").innerText = "Done! 🎉"
                submitButton.querySelector("svg").classList.add("hidden")
                submitButton.querySelector("svg").classList.remove("inline")
                setTimeout(() => {
                    document.querySelectorAll("form input").forEach(x => x.removeAttribute("disabled"))
                    submitButton.querySelector("span").innerText = "Submit"
                    }
                , 1000)
            })
            .catch(error => console.log(error))
        })
    </script>
}
